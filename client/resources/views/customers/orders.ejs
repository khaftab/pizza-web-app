<%- include('../partials/head.ejs') %>
    <%- include('../partials/navigation.ejs') %>

<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All Orders</h1>
        <% if (messages.success) { %> 
        <div class="order-success-alert flex items-center bg-green-500 text-white text-md font-bold px-4 py-3" role="alert">
            <p><%= messages.success %> </p>
        </div>
        <% } %> 
        <table class="w-full">
            <thead>
                <tr>
                    <th class="px-4 py-2 text-left">Orders</th>
                    <th class="px-4 py-2 text-left">Phone</th>
                    <th class="px-4 py-2 text-left">Address</th>
                    <th class="px-4 py-2 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders.length) { %>
                    <% orders.forEach(order => { %>  
                        <tr>
                            <td class="border px-4 py-2">
                                <a href="/" class="link"><%= order._id %> </a>
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.phone %> 
                            </td>
                            <td class="border px-4 py-2">
                                <%= order.address %> 
                            </td>
                            <td class="border px-4 py-2">
                                <%= moment(order.createdAt).format('hh:mm A') %> 
                            </td>
                        </tr>
                    <% }) %> 
                <% } else { %>
                    <tr>
                        <td class="p-4">No orders found</td>
                    </tr>
                <% } %>  
            </tbody>
        </table>
    </div>  
</section>

</body>
<script src="/js/main.js"></script>
</html>
