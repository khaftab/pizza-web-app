<%- include('./partials/head.ejs') %>
    <header class="min-h-screen flex flex-col max-h-screen">
        <%- include('./partials/navigation.ejs') %>
            <section class="hero py-16 bg-secondary ">
                <div class="container mx-auto flex justify-between items-center">
                    <div class="w-1/2">
                        <h6 class="text-lg"><em>Are you hungry?</em></h6>
                        <h1 class="text-6xl font-bold">Don't wait</h1>
                        <button
                            class="px-6 py-2 rounded-full text-pure font-bold mt-4 bg-primary transition-colors duration-300 hover:bg-primary-hover">Order
                            Now</button>
                    </div>
                    <div class="w-1/2" style="height: 400px;">
                        <img src="/img/hero-pizza.png" alt="hero pizza"
                            style="width: 100%; height: 100%; object-fit: contain;" />
                    </div>
                </div>
            </section>
    </header>

    <!-- Menu -->

    <section class="hero container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Pizzas</h1>
        <div class="grid grid-cols-4 gap-x-12 gap-y-16">
            <% pizzas.map(pizza=> { %>
                <div>
                    <img src="/img/<%= pizza.image %>" alt="Pizza" class="h-40 mx-auto">
                    <div class="text-center">
                        <h2 class="mb-4 text-lg">
                            <%= pizza.name %>
                        </h2>
                        <span class="py-1 px-4 uppercase rounded-full text-xs bg-secondary">
                            <%= pizza.size %>
                        </span>
                    </div>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">&#8377; <%= pizza.price %> </span>
                        <button data-pizza="<%= JSON.stringify(pizza) %>"
                            class="add-to-cart py-1 px-6 rounded-full border-solid border-2 border-primary text-primary transition-colors duration-300 flex items-center font-bold hover:bg-primary hover:border-pure hover:text-pure">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
                <% }) %>
        </div>
    </section>
    <script src="/js/main.js"></script>
    </body>


    </html>